#!/bin/bash
#
#	/etc/rc.d/init.d/recording
#
# Starts the recording daemon
#
# chkconfig: 345 44 56
# description: execute batch service for recording
# processname: recording

# Source function library.
. /lib/lsb/init-functions

[ -x /usr/sbin/recording.sh ] || exit 0

DAEMON=/usr/sbin/recording.sh
NAME=recording
LOCK=/var/lock/recording
RETVAL=0

#
# See how we were called.
#

start() {
	# Check if it is already running
	if [ ! -f /var/lock/recording ]; then
	    log_daemon_msg "Starting recording daemon: "
	    start-stop-daemon --start --exec "$DAEMON"
	    RETVAL=$?
	    [ $RETVAL -eq 0 ] && touch "$LOCK"
	    log_end_msg "$RETVAL"
	fi
	return $RETVAL
}

stop() {
	log_daemon_msg "Stopping recording daemon: "
	pkill -f recording.sh
	pkill -f php
	RETVAL=$?
	[ $RETVAL -eq 0 ] && rm -f "$LOCK"
	log_end_msg "$RETVAL"
	return $RETVAL
}


restart() {
	stop
	start
}	

reload() {
	trap "" SIGHUP
	pkill -HUP recording.sh
}	

case "$1" in
    start)
	start
	;;
    stop)
	stop
	;;
    reload)
	reload
	;;
    restart)
	restart
	;;
    condrestart)
	if [ -f /var/lock/recording ]; then
	    restart
	fi
	;;
    status)
	status_of_proc "$DAEMON" "$NAME" && exit 0 || exit $?
	;;
    *)
	echo $"Usage: $0 {start|stop|status|restart|condrestart|reload}"
	exit 1
esac

exit $RETVAL
